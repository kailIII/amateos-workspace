<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.emp.friskyplayer"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.FriskyPlayerApplication"
        android:icon="@drawable/ic_launcher"
        android:debuggable="false"
        android:allowBackup="true"
        android:label="@string/app_name" >
        <activity
            android:name=".activities.FriskyPlayerActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.frisky" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.FriskyPlayerPreferencesActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.frisky" >
        </activity>
  
        <service
            android:name=".services.FriskyService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.emp.friskyplayer.services.action.PLAY" />
                <action android:name="com.emp.friskyplayer.services.action.STOP" />
                <action android:name="com.emp.friskyplayer.services.action.TOGGLE_PLAYBACK" />
                <action android:name="com.emp.friskyplayer.services.action.QUALITY" />
            </intent-filter>
        </service>

        <receiver android:name=".receivers.HeadphonesReceiver" >
            <intent-filter>
                <action android:name="android.media.AUDIO_BECOMING_NOISY" />
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
        <receiver android:name=".receivers.ConnectionReceiver" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <receiver android:name=".receivers.PhoneReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>
        <receiver android:name=".receivers.MediaButtonReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".widget.WidgetProvider"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget" />
        </receiver>
    </application>

</manifest>