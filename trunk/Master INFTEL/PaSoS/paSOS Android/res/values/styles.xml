    </style>

    <style name="SubtituloTema2">
        <item name="android:textColor">@color/amarillo</item>
        <item name="android:layout_marginLeft">3dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="OpcionTema2">
        <item name="android:textColor">@color/amarillo</item>
    </style>

    <style name="FondoTema2">
        <item name="android:background">@color/gris_oscuro</item>
