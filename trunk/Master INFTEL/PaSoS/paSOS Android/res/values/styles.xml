    <!-- *********** TEMA 1  ************************************ -->
    <style name="TituloTema1">
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">3dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/fondo_negro</item>
        <item name="android:layout_margin">4dip</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingRight">4dip</item>
    </style>

    <style name="SubtituloTema1">
        <item name="android:textColor">@color/negro</item>
        <item name="android:layout_marginLeft">3dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="OpcionTema1">
        <item name="android:textColor">@color/negro</item>
    </style>

    <style name="FondoTema1">
        <item name="android:background">@color/blanco</item>
    </style>

    <!-- *********** TEMA 2  ************************************ -->
