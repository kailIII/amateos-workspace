<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tema1">
        <item name="titulo">@style/TituloTema1</item>
        <item name="subtitulo">@style/SubtituloTema1</item>
        <item name="opcion">@style/OpcionTema1</item>
        <item name="fondo">@style/FondoTema1</item>
    </style>

