<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sprints_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/fondo">
    <ImageView
        android:id="@+id/tarea_list_item_termometro"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="3dip"
        android:src="@drawable/termometro_verde" />
     <TextView
        android:id="@+id/tarea_list_item_inicio_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tarea_list_item_termometro"
        android:layout_toRightOf="@+id/tarea_list_item_termometro"
        android:text="Nombre:"
        android:textAppearance="?android:attr/textAppearanceMedium" />
     
     
</RelativeLayout>