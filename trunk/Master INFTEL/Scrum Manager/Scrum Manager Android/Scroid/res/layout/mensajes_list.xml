<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sprints_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/fondo">

    <ImageView
        android:id="@+id/sprints_list_item_termometro"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="3dip"
        android:src="@drawable/termometro_verde" />

    <TextView
        android:id="@+id/mensajes_list_item_origen_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sprints_list_item_termometro"
        android:layout_toRightOf="@+id/sprints_list_item_termometro"
        android:text="Inicio:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/sprints_list_item_fin_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mensajes_list_item_origen_label"
        android:layout_below="@+id/mensajes_list_item_origen_label"
        android:text="Fin:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

