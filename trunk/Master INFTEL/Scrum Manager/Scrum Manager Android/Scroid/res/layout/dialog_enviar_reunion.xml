<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:theme="@style/Theme.Sherlock" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.24" >

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" >

                <TextView
                    android:id="@+id/lugarReunionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.18"
                    android:text="@string/lugarReunionLabel" />

                <EditText
                    android:id="@+id/lugarEdit"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_weight="0.18" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout2"
                android:layout_alignLeft="@+id/linearLayout2"
                android:layout_marginBottom="20dp" >

                <TextView
                    android:id="@+id/asuntoLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/asuntoReunionLabel" />

                <EditText
                    android:id="@+id/asuntoEdit"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:inputType="textUri" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <Button
                android:id="@+id/enviarNuevaReunionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout2"
                android:layout_centerHorizontal="true"
                android:background="@drawable/fondo_verde"
                android:textColor="@color/blanco"
                android:layout_marginTop="42dp"
                android:text="@string/enviarReunionButton" />
        </RelativeLayout>
    </LinearLayout>
