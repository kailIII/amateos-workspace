<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <g:HTMLPanel>
    <div class="content-header" style="va">
      <h1>
        Perfil de usuario
        <small>Edite y vea sus datos</small>
      </h1>
    </div>
    <div class="clear"></div>
    <p>
      <g:InlineLabel addStyleNames="w150">Foto perfil</g:InlineLabel>
      <g:Image ui:field="avatar"></g:Image>
    </p>
    <p>
      <g:InlineLabel addStyleNames="w150">Nombre Completo</g:InlineLabel>
      <g:TextBox addStyleNames="span4" ui:field="fullname"></g:TextBox>
    </p>
    <p>
      <g:InlineLabel addStyleNames="w150">Cuenta de usuario</g:InlineLabel>
      <g:TextBox addStyleNames="span4" ui:field="cuenta"></g:TextBox>
    </p>
    <p>
      <g:InlineLabel addStyleNames="w150">Direcci√≥n email</g:InlineLabel>
      <g:TextBox addStyleNames="span4 uneditable-input"
        ui:field="mail"></g:TextBox>
    </p>
    <p>
      <br />
      <g:Button addStyleNames="btn primary" text="Guardar Cambios"
        ui:field="save"></g:Button>
    </p>
  </g:HTMLPanel>
</ui:UiBinder> 