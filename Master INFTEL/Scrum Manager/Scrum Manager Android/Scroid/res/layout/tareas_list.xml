<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tareas_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/tareas_list_item_prioridad"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="3dip" />

    <TextView
        android:id="@+id/tareas_list_item_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dip"
        android:text="DescripciÃ³n tarea"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/azul_ice"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tareas_list_item_estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tareas_list_item_descripcion"
        android:layout_marginBottom="2dip"
        android:layout_marginRight="3dp"
        android:background="@color/gris"
        android:padding="3dip"
        android:text="Finalizado"
        android:textColor="@color/blanco"
        android:textSize="10dip" />

</RelativeLayout>